<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anoop.doordine">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/doordine_app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/doordine_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.anoop.doordine.activity.ResetPasswordActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.anoop.doordine.activity.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.anoop.doordine.activity.OrderPlacedActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anoop.doordine.activity.CartActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.anoop.doordine.activity.RestaurantMenuActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            />
        <activity
            android:name="com.anoop.doordine.activity.ForgotPasswordActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.anoop.doordine.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anoop.doordine.activity.RegistrationActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.anoop.doordine.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anoop.doordine.activity.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anoop.doordine.activity.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anoop.doordine.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
    </application>

</manifest>